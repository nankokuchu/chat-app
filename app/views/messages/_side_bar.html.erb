<div class="side-bar">
  <div class="top-side-bar">
    <div class="top-side-bar-name">
    <%= link_to current_user.name, edit_user_path(current_user.id), method: :get %>
    </div>
    <div class="create-chat">
      <%= link_to 'チャットを作成する', new_room_path, method: :get %>
    </div>
  </div>
  <div class="rooms">  
    <div class="room">
        <div class="room-name">
          <% current_user.rooms.each do |room| %>
            <div class="room">
              <div class="room-name">  
                <a href="#"><%= room.name %></a>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>  